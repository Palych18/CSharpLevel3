<Window x:Class="HomeWork1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork1"
        mc:Ignorable="d"
        Title="Блокнот" Height="200" Background="#FFFCFFBA" Foreground="White" Width="300" Icon="/Image/Icon.png">
    <Grid>
        <StackPanel>
            <CheckBox IsChecked="{Binding HomeWork1, ElementName=mbtnButton1}" Width="100" Margin="96,0" />
            <local:MyButton x:Name="mbtnButton1" HomeWork1="False" Width="100"  Background="Black" Click="mbtnButton1_Click" BorderBrush="#FF0E0E0E" Foreground="#FFB60505" Content="Моя кнопка" Margin="96,0"/>
        </StackPanel>

    </Grid>
</Window>
