<UserControl x:Class="FileSaveControl.TabSaveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileSaveControl">

    <Grid>
        <Button x:Name="btnSave" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="32" ToolTip="Нажмите для сохранения данных">
            <StackPanel Orientation="Horizontal" Height="30" Width="250">
                <Label Content="Cохранить данные в журнал" Width="191" HorizontalContentAlignment="Right" FontWeight="Bold"/>
                <Image Source="Image/Save.png" Height="22" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,3"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
